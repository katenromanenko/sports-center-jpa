<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sportsPU" transaction-type="RESOURCE_LOCAL">

        <class>com.example.sportcenter.entity.Client</class>
        <class>com.example.sportcenter.entity.Visitor</class>
        <class>com.example.sportcenter.entity.Employee</class>
        <class>com.example.sportcenter.entity.ServiceOffer</class>
        <class>com.example.sportcenter.entity.Facility</class>
        <class>com.example.sportcenter.entity.Visit</class>
        <class>com.example.sportcenter.entity.Reservation</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver"   value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url"      value="jdbc:postgresql://localhost:5432/sports_center"/>
            <property name="jakarta.persistence.jdbc.user"     value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>

            <property name="hibernate.dialect"   value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql"  value="true"/>
            <property name="jakarta.persistence.sharedCache.mode" value="ENABLE_SELECTIVE"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.jcache.JCacheRegionFactory"/>
            <property name="hibernate.javax.cache.provider" value="org.ehcache.jsr107.EhcacheCachingProvider"/>
            <property name="hibernate.javax.cache.uri" value="ehcache.xml"/>



            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
